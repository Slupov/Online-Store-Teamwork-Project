@model IEnumerable<string>
<h2>Shop By Categories</h2>


<div id="categories-panel">
    @foreach (var category in Model)
    {

        var categoryUrlText = "https://raw.githubusercontent.com/Slupov/Online-Store-Teamwork-Project/master/OnlineStore/OnlineStore/images/" + category + ".jpg";

        if (categoryUrlText.Contains(" "))
        {
            categoryUrlText = categoryUrlText.Replace(" ", "%20");
        }

        <div class="floated_img">
            <a href="/Products/BrowseProducts?category=@category">
                <img style="-webkit-user-select: none" src=@categoryUrlText>
            </a>
            @Html.ActionLink(category, "BrowseProducts", "Products", new { category = category }, null)
        </div>
    }
</div>


